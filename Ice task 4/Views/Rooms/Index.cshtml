@model IEnumerable<Ice_task_4.Models.Room>

@{
    ViewData["Title"] = "Room Management";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1">Room Management</h1>
            <p class="text-muted">Manage all room inventory and availability</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Add New Room
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>
                                <i class="bi bi-123 me-1"></i>
                                @Html.DisplayNameFor(model => model.RoomNumber)
                            </th>
                            <th>
                                <i class="bi bi-house-door me-1"></i>
                                @Html.DisplayNameFor(model => model.RoomType)
                            </th>
                            <th>
                                <i class="bi bi-currency-dollar me-1"></i>
                                @Html.DisplayNameFor(model => model.PricePerNight)
                            </th>
                            <th>
                                <i class="bi bi-check-circle me-1"></i>
                                @Html.DisplayNameFor(model => model.IsAvailable)
                            </th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoomNumber)
                                </td>
                                <td>
                                    @if (item.RoomType == "Single")
                                    {
                                        <span class="badge bg-info text-dark">
                                            <i class="bi bi-person-fill me-1"></i>Single
                                        </span>
                                    }
                                    else if (item.RoomType == "Double")
                                    {
                                        <span class="badge bg-success text-white">
                                            <i class="bi bi-people-fill me-1"></i>Double
                                        </span>
                                    }
                                    else if (item.RoomType == "Suite")
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-stars me-1"></i>Suite
                                        </span>
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.RoomType)
                                    }
                                </td>
                                <td>
                                    $@Html.DisplayFor(modelItem => item.PricePerNight)
                                </td>
                                <td>
                                    @if (item.IsAvailable)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle-fill me-1"></i>Available
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle-fill me-1"></i>Occupied
                                        </span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.RoomId" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil-square me-1"></i>Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.RoomId" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-info-circle me-1"></i>Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.RoomId" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card mt-4 shadow-sm border-0 bg-light">
        <div class="card-body">
            <div class="d-flex align-items-center">
                <div class="p-3 bg-primary text-white rounded-circle me-3">
                    <i class="bi bi-info-circle-fill fs-5"></i>
                </div>
                <div>
                    <h5 class="card-title mb-1">Room Management Information</h5>
                    <p class="card-text text-muted mb-0">This page allows you to manage all room inventory. You can add new rooms, update room details, or mark rooms as unavailable for maintenance.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any JavaScript required for this page
    </script>
}